<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAEE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="770dp"
        android:background="@drawable/head_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_left"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/intersemibold"
            android:text="@string/proportions"
            android:textAlignment="center"
            android:textColor="#22284B"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"

        app:srcCompat="@drawable/prop_pic"
        android:contentDescription="@null"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="35dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/waist"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editprop_bg"
                android:ems="10"
                android:fontFamily="@font/intersemibold"
                android:hint="@string/lbl_waistline"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#C1C1C1"
                android:textSize="16sp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@drawable/rectprop_bg"
                android:fontFamily="@font/intersemibold"
                android:paddingTop="10dp"
                android:text="@string/lbl_inch"
                android:textAlignment="center"
                android:textColor="#6588E6"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/chest"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editprop_bg"
                android:ems="10"
                android:fontFamily="@font/intersemibold"
                android:hint="@string/lbl_chest"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#C1C1C1"
                android:textSize="16sp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@drawable/rectprop_bg"
                android:fontFamily="@font/intersemibold"
                android:paddingTop="10dp"
                android:text="@string/lbl_inch"
                android:textAlignment="center"
                android:textColor="#6588E6"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/hip"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editprop_bg"
                android:ems="10"
                android:fontFamily="@font/intersemibold"
                android:hint="@string/lbl_hip"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#C1C1C1"
                android:textSize="16sp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@drawable/rectprop_bg"
                android:fontFamily="@font/intersemibold"
                android:paddingTop="10dp"
                android:text="@string/lbl_inch"
                android:textAlignment="center"
                android:textColor="#6588E6"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/height"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editprop_bg"
                android:ems="10"
                android:fontFamily="@font/intersemibold"
                android:hint="@string/lbl_height"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#C1C1C1"
                android:textSize="16sp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@drawable/rectprop_bg"
                android:fontFamily="@font/intersemibold"
                android:paddingTop="10dp"
                android:text="@string/cm"
                android:textAlignment="center"
                android:textColor="#6588E6"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/weight"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editprop_bg"
                android:ems="10"
                android:fontFamily="@font/intersemibold"
                android:hint="@string/lbl_weight"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:textColorHint="#C1C1C1"
                android:textSize="16sp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@drawable/rectprop_bg"
                android:fontFamily="@font/intersemibold"
                android:paddingTop="10dp"
                android:text="@string/kg"
                android:textAlignment="center"
                android:textColor="#6588E6"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/blue_button"
        android:fontFamily="@font/intersemibold"
        android:text="@string/lbl_success"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>